{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        ".//*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}